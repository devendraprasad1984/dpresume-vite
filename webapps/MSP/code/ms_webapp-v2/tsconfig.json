{
  "compilerOptions": {
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "target": "es5"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "@types",
    "**/*.ts",
    "**/*.tsx",
  ],
  "types": ["./global.d.ts"],
}
